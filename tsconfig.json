{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"sourceMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"alwaysStrict": false,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"files": ["src/types/types.d.ts"],
	"exclude": ["node_modules", "dist", "tests", "**/*.spec.ts"],
}