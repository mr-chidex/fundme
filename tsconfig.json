{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"sourceMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"alwaysStrict": false,
		"noImplicitAny": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"exclude": ["node_modules", "tests"], 
}